<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hiragana_text"
        tools:text="@string/learn_hiragana"
        android:layout_marginTop="57dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hiragana_image"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/hiragana_text"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:id="@+id/randomImage1"
        android:layout_marginStart="14dp"
        android:layout_below="@+id/hiragana_image"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/randomImage2"
        android:layout_alignTop="@+id/randomImage1"
        android:layout_toEndOf="@+id/randomImage1" />

    <ImageButton
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/randomImage3"
        android:layout_alignTop="@+id/randomImage2"
        android:layout_toEndOf="@+id/randomImage2" />

    <ImageButton
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/randomImage4"
        android:layout_alignTop="@+id/randomImage3"
        android:layout_toEndOf="@+id/randomImage3" />

    <ImageButton
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/randomImage4"
        android:layout_toEndOf="@+id/randomImage4"
        android:id="@+id/randomImage5" />
</RelativeLayout>